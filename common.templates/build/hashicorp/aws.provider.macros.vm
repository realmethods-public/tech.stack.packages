# Specify the provider and access details
provider "aws" {
  region     = "${aib.getParam("terraform.region")}"
  access_key = "${var.aws-access-key}"
  secret_key = "${var.aws-secret-key}"
  version = "~> 2.0"
}

#outputAWSKeyPairDecl()

#set( $aws-vpc = ${aib.getParam("terraform.aws-vpc")} )
