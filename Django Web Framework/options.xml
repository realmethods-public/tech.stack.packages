	<option value="admin" required="true" name="adminUserId"
		description="admin user Id" type="input"/>		
	<option value="letmein2" required="true" name="adminPassword"
		description="admin password" type="input"/>		
	<option value="me@example.com" required="true" name="email"
		description="email address" type="input"/>		
	<option value="" required="true" name="url"
		description="application url" type="input"/>		
	<option value="" required="true" name="license"
		description="license type" type="input"/>		

</options>

<!-- Docker -->
