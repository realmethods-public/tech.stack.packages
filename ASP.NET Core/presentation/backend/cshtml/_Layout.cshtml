#xmlHeader()

#set( $appName = $aib.getApplicationNameFormatted() )
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ${appName}</title>

    <environment include="Development">
    </environment>
    <environment exclude="Development">
    </environment>

    <!-- 3rd party style sheets -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/themes/default/style.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap3-dialog/1.34.9/css/bootstrap-dialog.min.css" rel="stylesheet" type="text/css" />
    <link href="http://fonts.googleapis.com/css?family=Libre Franklin" rel="stylesheet" type="text/css" />
    <!-- app specific style sheets -->
    <link href="/css/common.css" rel="stylesheet" type="text/css" />

	<!-- 3rd party java script-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/jstree.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap3-dialog/1.34.9/js/bootstrap-dialog.min.js"></script>

    <!-- app specific javascript functions -->
    <script src="/js/common.js"></script>

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" style="background:lightgrey">
        <div class="container" style="background:lightgrey">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" style="background:lightgrey">
                <ul class="nav navbar-nav">
                	<li><img align="center" src="${aib.getParam("application.corporate logo URL")}" alt="app logo" border="0" style="width:150px;height:50px"/></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="RunApp">Run ${appName}</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content" style="padding-top:60px">
        @RenderBody()
        <hr />
        <table>
          <tr>
            <td style="text-align:left;width:50%">
              <table>
                <tr>
                  <td style="width:80px;align:center">
                    <img src="~/img/asp.net.png" alt="ASP.NET" class="img-responsive" style="width:64px;height:64px" />
                  </td>
                  <td style="width:100px;align:center">
                    <img src="~/img/nhibernate.png" alt="nHibernate" class="img-responsive" style="width:100px;height:20px" />
                  </td>
                  <td style="width:100px;align:center">
                    <img src="~/img/jquery.css.html.bootstrap.png" alt="jQuery" class="img-responsive" style="width:90px;height:30px" />
                  </td>
                  <td style="width:80px;text-align:center">
                    <img src="~/img/cloud.migrate.png" alt="CSS3" class="img-responsive" style="width:48px;height:48px" />
                  </td>
                </tr>
              </table>
            </td>
            <td style="text-align:right;width:50%">
              <footer>
              	<p align="right">&copy; 2017 - ${aib.getParam("application.company name")}</p>
               </footer>
              </td>
            </tr>
          <table>
    </div>

    <environment include="Development">
    </environment>
    <environment exclude="Development">
    </environment>


    @RenderSection("Scripts", required: false)
</body>
</html>
